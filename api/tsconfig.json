{
  "compilerOptions": {
    "target": "es2024",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@app/db": ["src/utils/infrastructure/prisma"],
      "@app/db/models": ["src/generated/prisma/client"],
      "@app/env": ["src/utils/env"],
      "@app/security": ["src/utils/security/SecurityManager"],
      "@app/services": ["src/REST/services"],
      "@app/repositories": ["src/REST/repositories"],
      "@app/interfaces/services": ["src/REST/services/interfaces"],
      "@app/interfaces/repositories": ["src/REST/repositories/interfaces"]
    }
  }
}
